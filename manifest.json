{
    "manifest_version": 2,

    "name": "Pokaż średnią w dzienniku",
    "description": "To rozszerzenie wymusi pokazanie średnich ocen w systemie iDziennik",
    "version": "1.0",


    "background": {
        "scripts": [
            "srednia.js"
        ],
        "persistent": true
    },

    "browser_action": {
        "default_title": "Inject!"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}
